<Window x:Class="TestDemo01.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Examples="clr-namespace:TestDemo01.Examples"
        Title="Periodic Table Demo App" 
		UseLayoutRounding="True"
		SnapsToDevicePixels="True"
		Height="450" Width="725">
	<TabControl TabStripPlacement="Left">
		<TabItem Header="Simple Selection">
			<Examples:SimpleSelection />
		</TabItem>
		<TabItem Header="Halloween">
			<Examples:Halloween/>
		</TabItem>
		<TabItem Header="Frosted Glass">
			<Examples:Halloween GlowBrush="Black"
								TextBrush="White"
								BackgroundBrush="White"
								Background="White"/>
		</TabItem>
		<TabItem Header="Colored Backgrounds">
			<Examples:ColoredGroups/>
		</TabItem>
		<TabItem Header="Selectable Colors">
			<Examples:SelectableColors/>
		</TabItem>
	</TabControl>
</Window>
